{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "esnext",
		"baseUrl": "./src",
		"paths": {
			"uiKit": [
				"components/uiKit"
			],
			"uiKit/*": [
				"components/uiKit/*"
			]
		}
	},
	"include": [
		"src/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}